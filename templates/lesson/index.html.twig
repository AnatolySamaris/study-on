{% extends 'base.html.twig' %}

{% block title %}Lessons / StudyOn{% endblock %}

{% block body %}
    <h1>Lesson index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Content</th>
                <th>OrderNumber</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for lesson in lessons %}
            <tr>
                <td>{{ lesson.id }}</td>
                <td>{{ lesson.title }}</td>
                <td>{{ lesson.content }}</td>
                <td>{{ lesson.orderNumber }}</td>
                <td>
                    <a href="{{ path('app_lesson_show', {'id': lesson.id}) }}">Show</a>
                    <a href="{{ path('app_lesson_edit', {'id': lesson.id}) }}">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_lesson_new') }}">Create new</a>
{% endblock %}
