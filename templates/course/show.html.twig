{% extends 'base.html.twig' %}

{% block title %} {{ course.title }} / StudyOn {% endblock %}

{% block body %}
    <h1>{{ course.title }}</h1>

    <a href="{{ path('app_course_index') }}">Back to list</a>

    <a href="{{ path('app_course_edit', {'id': course.id}) }}">Edit</a>

    {{ include('course/_delete_form.html.twig') }}

    <hr style="border: 0; height: 2px; background-color: black;">

    <p>{{ course.description ?: "No description." }}</p>

    <h3>Lessons</h3>
    <table class="table">
        {% for lesson in lessons %}
            <tr>
                <td>
                    <a href="{{ path('app_lesson_show', {'id': lesson.id}) }}">{{ lesson.title }}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">No records found</td>
            </tr>
        {% endfor %}
    </table>
    
    <a href="{{ path('app_lesson_new', {'course_id': course.id}) }}">Create new</a>
{% endblock %}
